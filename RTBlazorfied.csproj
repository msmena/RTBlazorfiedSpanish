<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
	<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	<Authors>Ryan A. Kueter</Authors>
	<Company>Ryan A. Kueter</Company>
	<Copyright>Ryan A. Kueter</Copyright>
	  <Description>RTBlazorfied is a fast and easy way for developers to add a rich text box / html editor to their Blazor applications using C# and razor.</Description>
	  <RepositoryUrl>https://github.com/ryankueter/RTBlazorfied</RepositoryUrl>
	  <PackageProjectUrl>https://github.com/ryankueter/RTBlazorfied</PackageProjectUrl>
	  <PackageReleaseNotes>Added the ability to remove css inputs and dividers and small bug fixes to improve the usability of the editor.</PackageReleaseNotes>
	  <PackageTags>Rich Text Box;Html Editor;Editor;Blazor</PackageTags>
	  <Version>1.0.139</Version>
	  <AssemblyVersion>1.0.139</AssemblyVersion>
	  <FileVersion>1.0.139</FileVersion>
	  <RepositoryType>Git</RepositoryType>
	  <Product>$(AssemblyName)</Product>
	  <NeutralLanguage>en</NeutralLanguage>
	  <Title>RTBlazorfied</Title>
	  <PackageReadmeFile>README.md</PackageReadmeFile>
	  <PackageLicenseFile>LICENSE</PackageLicenseFile>
  </PropertyGroup>

  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="8.0.0" />
  </ItemGroup>

	<ItemGroup>
		<None Include="LICENSE" Pack="true" PackagePath="" />
		<None Include="README.md" Pack="true" PackagePath="" />
	</ItemGroup>

</Project>
