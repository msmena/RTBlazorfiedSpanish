                    <input type="text" id="rich-text-box-link-webaddress" name="webaddress" placeholder="https://www...">
                    <label for="linktext">Link Text</label>
                    <input type="text" id="rich-text-box-linktext" name="linktext">
                    <label style="display: flex; align-items: center;">
                        <input id="rich-text-box-link-modal-newtab" type="checkbox" name="opentab" />
                        Open in New Tab
                    </label>
                    <div style="margin-top: 20px; text-align: right;">
                        <button @onclick="CloseLinkDialog" class="rich-text-box-form-button">Close</button>
                        <button @onclick="InsertLink" class="rich-text-box-form-button">OK</button>
                    </div>
                </div>
            </div>
        </div>
