    <!-- Modals -->
    <div id="rich-text-box-image-modal" class="rich-text-box-modal">
        <div class="rich-text-box-modal-content">
            <div class="rich-text-box-modal-body">
                <div style="display: flex; flex-direction: row; justify-content: space-between;">
                    <div style="align-self: flex-start; margin-left: 10px;">
                        <h2>Image</h2>
                    </div>
                    <div style="align-self: flex-start; margin: 15px 10px 0 0;">
                        <span @onclick="CloseImageDialog" class="rich-text-box-modal-close">&times;</span>
                    </div>
                </div>
                <div style="padding: 10px;">
                    <label for="webaddress">Web Address</label>
                    <input type="text" id="rich-text-box-image-webaddress" name="webaddress" placeholder="https://www...">
                    <label for="imagewidth">Image Width</label>
                    <input type="text" id="rich-text-box-image-width" name="imagewidth">
                    <label for="imageheight">Image Height</label>
                    <input type="text" id="rich-text-box-image-height" name="imageheight">
                    <label for="alttext">Alternative Text</label>
                    <input type="text" id="rich-text-box-image-alt-text" name="alttext">
                    <div style="margin-top: 20px; text-align: right;">
                        <button @onclick="CloseImageDialog" class="rich-text-box-form-button">Close</button>
                        <button @onclick="InsertImage" class="rich-text-box-form-button">OK</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="rich-text-box-link-modal" class="rich-text-box-modal">
